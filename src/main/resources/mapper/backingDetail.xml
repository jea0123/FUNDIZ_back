<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.funding.mapper.BackingDetailMapper">
    <resultMap id="BackingDetailResultMap" type="com.example.funding.dto.response.user.BackingDetailDto">
        <result property="price" column="price"/>
        <result property="quantity" column="quantity"/>

        <!-- backingReward -->
        <association property="backingReward" javaType="com.example.funding.dto.response.user.BackingRewardDto">
            <id property="rewardId" column="rewardId"/>
            <result property="rewardName" column="rewardName"/>
            <result property="deliveryDate" column="deliveryDate"/>
        </association>
        <!-- backingProject-->
        <association property="backingProject" javaType="com.example.funding.dto.response.user.BackingProjectDto">
            <id property="projectId" column="projectId"/>
            <result property="thumbnail" column="thumbnail"/>
            <result property="title" column="title"/>
            <result property="goalAmount" column="goalAmount"/>
            <result property="currAmount" column="currAmount"/>
            <result property="endDate" column="endDate"/>
            <result property="projectStatus" column="projectStatus"/>
        </association>

        <!--backing -->
        <association property="backing" javaType="com.example.funding.model.Backing">
            <id property="backingId" column="backingId"/>
            <result property="amount" column="amount"/>
            <result property="createdAt" column="createAt"/>
            <result property="backingStatus" column="backingStatus"/>
        </association>

    </resultMap>
    
    <select id="findByBackingIds" resultType="backingDetail">
        SELECT *
        FROM backingDetail
        WHERE backingId IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>


    <!-- 후원한 목록의 상세 리스트 -->
    <select id="getBackingProjectAndUserId" parameterType="map" resultMap="BackingDetailResultMap">
        SELECT
        <!-- 프로젝트 테이블에서 가져올 내용 -->
        p.projectId,
        p.title,
        p.thumbnail,
        p.endDate,
        p.projectStatus,
        p.goalAmount,
        p.currAmount,

        <!-- 리워드 테이블에서 가져올 내용 -->
        r.rewardId,
        r.rewardName,
        r.deliveryDate,

        <!-- 후원 테이블에서 가져올 내용 -->
        b.backingId,
        b.amount,
        b.createdAt,
        b.backingStatus,
        <!-- 후원 상세에서 가져올 내용 -->
        bd.price,
        bd.quantity

        FROM backingDetail bd
        JOIN backing b ON b.backingId = bd.backingId
        JOIN reward r ON bd.rewardId= r.rewardId
        JOIN project p ON r.projectId = p.projectId

        WHERE b.userId=#{userId}
        AND p.projectId=#{projectId}
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.funding.mapper.CategoryMapper">

    <select id="getAllCategories" resultType="category">
        SELECT * FROM category
    </select>

    <select id="getAllSubcategories" resultType="subcategoryDto">
        SELECT
            s.CTGRID,
            c.CTGRNAME,
            s.SUBCTGRID,
            s.SUBCTGRNAME
        FROM SUBCATEGORY s
        JOIN CATEGORY c ON c.CTGRID = s.CTGRID
    </select>
</mapper>
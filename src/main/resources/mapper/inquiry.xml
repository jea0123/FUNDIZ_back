<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.funding.mapper.InquiryMapper">

    <select id="inquiryList" resultType="inquiry">
        SELECT * FROM
        (SELECT sub.*, ROWNUM rnum FROM (
        SELECT * FROM inquiry order by INQID desc
        ) sub)
    </select>

    <select id="inquiryDetail" resultType="inquiry">
        SELECT * FROM inquiry
        WHERE INQID = #{inqId}
    </select>

    <select id="item" resultType="inquiry">
        SELECT * FROM inquiry
        WHERE INQID=#{inqId}
    </select>

    <insert id="add">
        INSERT INTO inquiry
        VALUES (inquiry_seq.NEXTVAL, #{userId}, #{adId}, #{title}, #{content}, SYSDATE, 'N', #{ctgr}, 'N')
    </insert>

    <update id="update">
        UPDATE inquiry
        SET TITLE=#{title}, CONTENT=#{content}
        WHERE INQID=#{inqId}
    </update>

</mapper>

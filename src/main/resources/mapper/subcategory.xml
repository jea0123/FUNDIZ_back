<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.funding.mapper.SubcategoryMapper">

    <resultMap id="ctgrMap" type="com.example.funding.dto.response.project.SubcategoryDto" autoMapping="true">
        <id property="subctgrId" column="SUBCTGRID"/>
    </resultMap>

    <select id="getSubcategoryById" resultMap="ctgrMap">
        SELECT * FROM SUBCATEGORY S
            JOIN CATEGORY C ON C.CTGRID = S.CTGRID
        WHERE S.SUBCTGRID = #{subctgrId}
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.funding.mapper.CategoryMapper">

    <select id="getAllCategories" resultType="category">
        SELECT * FROM category
    </select>

    <select id="getAllSubcategories" resultType="subcategory">
        SELECT * FROM SUBCATEGORY
    </select>
    
    <select id="findSubcategoryById" resultType="subcategory">
        SELECT * FROM SUBCATEGORY
        WHERE SUBCTGRID = #{subctgrId}
    </select>

    <select id="getSubcategoryWithParent" resultType="subcategoryWithParentDto">
        SELECT
            SUBCTGRID,
            CTGRID
        FROM SUBCATEGORY sc
        LEFT JOIN CATEGORY c ON c.CTGRID = sc.CTGRID
        WHERE sc.SUBCTGRID = #{subctgrId}
    </select>
    
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.funding.mapper.BackingMapper">

    <!-- list resultMap -->

    <select id="findByBackingIds" resultType="backingDetail">
        SELECT *
        FROM backingDetail
        WHERE backingId IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- detail resultMap-->
    <resultMap id="BackingDetailResultMap" type="com.example.funding.dto.response.user.BackingDto">
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="quantity" column="quantity" jdbcType="NUMERIC"/>

        <!-- backingReward -->
        <association property="backingReward" javaType="com.example.funding.dto.response.user.MyPageBackingRewardDto">
            <id property="rewardId" column="rewardId" jdbcType="NUMERIC"/>
            <result property="rewardName" column="rewardName"/>
            <result property="deliveryDate" column="deliveryDate"/>

            <!-- backingProject-->
            <association property="backingProject" javaType="com.example.funding.dto.response.user.MyPageBackingProjectDto">
                <id property="projectId" column="projectId" jdbcType="NUMERIC"/>
                <result property="thumbnail" column="thumbnail"/>
                <result property="title" column="title"/>
                <result property="goalAmount" column="goalAmount" jdbcType="NUMERIC"/>
                <result property="currAmount" column="currAmount" jdbcType="NUMERIC"/>
                <result property="endDate" column="endDate"/>
                <result property="projectStatus" column="projectStatus"/>
            </association>

        </association>


        <!--backing -->
        <association property="backing" javaType="com.example.funding.model.Backing">
            <id property="backingId" column="backingId" jdbcType="NUMERIC"/>
            <result property="amount" column="amount" jdbcType="NUMERIC"/>
            <result property="createdAt" column="createdAt"/>
            <result property="backingStatus" column="backingStatus"/>
        </association>

    </resultMap>

    <!-- 후원한 목록의 상세 리스트 -->
    <select id="getBackingProjectAndUserId" parameterType="map" resultMap="BackingDetailResultMap">
        SELECT
        <!-- 프로젝트 테이블에서 가져올 내용 -->
        p.projectId AS projectId,
        p.title AS title,
        p.thumbnail AS thumbnail,
        p.endDate AS endDate,
        p.projectStatus AS projectStatus,
        p.goalAmount AS goalAmount,
        p.currAmount AS currAmount,

        <!-- 리워드 테이블에서 가져올 내용 -->
        r.rewardId AS rewardId,
        r.rewardName AS rewardName,
        r.deliveryDate AS deliveryDate,

        <!-- 후원 테이블에서 가져올 내용 -->
        b.backingId AS backingId,
        b.amount AS amount,
        b.createdAt AS createdAt,
        b.backingStatus AS backingStatus,
        <!-- 후원 상세에서 가져올 내용 -->
        bd.price AS price,
        bd.quantity AS quantity

        FROM backingDetail bd
        JOIN backing b ON b.backingId = bd.backingId
        JOIN reward r ON bd.rewardId= r.rewardId
        JOIN project p ON r.projectId = p.projectId

        WHERE b.userId=#{userId}
        AND p.projectId=#{projectId}
        AND r.rewardId=#{rewardId}
    </select>

    <resultMap id="BackingListMap" type="com.example.funding.dto.response.user.BackingDto" autoMapping="false">
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="quantity" column="quantity" jdbcType="NUMERIC"/>

        <association property="backingReward" javaType="com.example.funding.dto.response.user.MyPageBackingRewardDto">
            <id property="rewardId" column="rewardId" jdbcType="NUMERIC"/>
            <result property="rewardName" column="rewardName"/>

            <association property="backingProject" javaType="com.example.funding.dto.response.user.MyPageBackingProjectDto">
                <id property="projectId" column="projectId" jdbcType="NUMERIC"/>
                <result property="title" column="title"/>
                <result property="thumbnail" column="thumbnail"/>
                <result property="endDate" column="endDate"/>
                <result property="projectStatus" column="projectStatus"/>
            </association>

        </association>

        <association property="backing" javaType="com.example.funding.model.Backing">
            <id property="backingId" column="backingId" jdbcType="NUMERIC"/>
            <result property="backingStatus" column="backingStatus"/>
            <result property="amount" column="amount" jdbcType="NUMERIC"/>
        </association>
    </resultMap>

    <!-- 전체 후원 리스트 -->
    <select id="getBackingListUserId" resultMap="BackingListMap">
        SELECT
        <!-- 프로젝트테이블에서 가져올 내용-->
        p.projectId AS projectId,
        p.title AS title,
        p.thumbnail AS thumbnail,
        p.endDate AS endDate,
        p.projectStatus AS projectStatus,


        <!-- 리워드 테이블에서 가져올 내용 -->
        r.rewardId AS rewardId,
        r.rewardName AS rewardName,

        <!-- 후원 테이블에서 가져올 내용 -->
        b.backingId AS backingId,
        b.backingStatus AS backingStatus,
        b.amount AS amount,

        <!-- 후원 상세에서 가져올 내용 -->
        bd.price AS price,
        bd.quantity AS quantity

        FROM backing b
        <!-- 테이블 조인 -->
        JOIN backingDetail bd ON b.backingId = bd.backingId
        JOIN reward r ON bd.rewardId = r.rewardId
        JOIN project p ON r.projectId = p.projectId

        WHERE b.userId =#{userId}
        ORDER BY b.createdAt DESC
    </select>

    <resultMap id="BackingResponseMap" type="com.example.funding.dto.response.backing.BackingResponseDto">
        <!-- 유저 -->
        <result property="userId" column="userId"/>
        <result property="nickname" column="nickname"/>
        <result property="email" column="email"/>

        <!-- 창작자 -->
        <result property="creatorId" column="creatorId"/>
        <result property="creatorName" column="creatorName"/>
        <result property="profileImg" column="profileImg"/>

        <!-- 프로젝트 -->
        <result property="projectId" column="projectId"/>
        <result property="title" column="title"/>
        <result property="thumbnail" column="thumbnail"/>

        <!-- 배송지 리스트 -->
        <collection property="addressList" ofType="com.example.funding.dto.response.address.AddressResponseDto">
            <id property="addrId" column="addrId"/>
            <result property="addrName" column="addrName"/>
            <result property="recipient" column="recipient"/>
            <result property="postalCode" column="postalCode"/>
            <result property="roadAddr" column="roadAddr"/>
            <result property="detailAddr" column="detailAddr"/>
            <result property="recipientPhone" column="recipientPhone"/>
            <result property="isDefault" column="isDefault"/>
        </collection>

        <!-- 리워드 리스트 -->
        <collection property="rewardsList" ofType="com.example.funding.dto.response.backing.BackingRewardDto">
            <id property="rewardId" column="rewardId"/>
            <result property="rewardName" column="rewardName"/>
            <result property="price" column="price"/>
            <result property="quantity" column="quantity"/>
            <result property="deliveryDate" column="deliveryDate"/>
        </collection>
    </resultMap>

    <select id = "prepareBacking" parameterType="map" resultMap = "BackingResponseMap">
        SELECT
        <!-- 유저 테이블 -->
        u.userId,
        u.nickname,
        u.email,

        <!-- 창작자 테이블 -->
        c.creatorId,
        c.creatorName,
        c.profileImg,

        <!-- 프로젝트 테이블-->
        p.projectId,
        p.title,
        p.thumbnail,

        <!-- 배송지 테이블 -->
        a.addrId,
        a.addrName,
        a.recipient,
        a.postalCode,
        a.roadAddr,
        a.detailAddr,
        a.recipientPhone,
        a.isDefault,

        <!-- 리워드 테이블 -->
        r.rewardId,
        r.rewardName,
        r.price,
        r.quantity,
        r.deliveryDate

        FROM users u
        JOIN project p ON p.projectId = #{projectId}
        JOIN creator c ON c.creatorId = p.creatorId
        LEFT JOIN address a ON a.userId = u.userId
        LEFT JOIN reward r ON r.projectId = p.projectId
        WHERE u.userId = #{userId}
    </select>

    <insert id="addBacking" parameterType="com.example.funding.model.Backing">
        <selectKey keyProperty="backingId" resultType="long" order="BEFORE">
            SELECT BACKING_SEQ.NEXTVAL FROM DUAL
        </selectKey>

        INSERT INTO backing (
        backingId,
        userId,
        amount,
        createdAt,
        backingStatus
        ) VALUES (
        #{backingId},
        #{userId},
        #{amount},
        #{createdAt, jdbcType=DATE},
        #{backingStatus}
        )
    </insert>

    <!-- BACKING_DETAIL INSERT -->
    <insert id="addBackingDetail" parameterType="com.example.funding.model.BackingDetail">
        INSERT INTO backingDetail (
        backingId,
        rewardId,
        price,
        quantity
        ) VALUES (
        #{backingId},
        #{rewardId},
        #{price},
        #{quantity}
        )
    </insert>


    <update id="updateBacking" parameterType="com.example.funding.dto.request.backing.BackingRequestUpdateDto">
        UPDATE backing
        <set>
            <if test="newAddress!=null">
                addrId = (
                    SELECT addrId
                    FROM address
                    WHERE roadAddr =#{newAddress.roadAddr}
                    AND detailAddr =#{newAddress.detailAddr}
                FETCH FIRST 1 ROWS ONLY
                )
            </if>
            <if test="newAddress ==null">
                addrId = addrId
            </if>
        </set>
        WHERE backingId = #{backingId}
        AND userId = #{userId}
    </update>

    <select id = "getBackerCnt" parameterType="long" resultType="long">
        SELECT
            NVL(sum(backerCnt),0)
        FROM
            project
        WHERE
            CREATORID = #{creatorId}
    </select>
    <!-- 후원날짜가 다를 경우도있기때문에 중복으로 나올 수도 있음 -->
    <select id = "getCBackerList" parameterType = "long" resultType="com.example.funding.dto.response.backing.BackingCreatorBackerList">
        SELECT
            u.userId,
            u.nickname,

            b.amount,
            b.createdAt,
            p.projectId
        FROM
            users u
        JOIN backing b ON u.userId = b.userId
        JOIN creator c ON c.userId = u.userId
        JOIN project p ON p.creatorId = c.creatorId
        WHERE c.CREATORID = #{creatorId}
        <!--AND p.PROJECTID = #{projectId}-->
    </select>

    <select id = "dailyStatus" parameterType="long" resultType ="com.example.funding.dto.response.creator.DailyCountDto">
        SELECT
            d.target_date AS createdAt,
            NVL(COUNT(b.BACKINGID), 0) AS count
        FROM (
            SELECT
                TRUNC(SYSDATE) - LEVEL + 1 AS target_date
            FROM
                dual
                CONNECT BY LEVEL &lt; 7
        ) d
        LEFT JOIN BACKING b
        ON TRUNC(b.CREATEDAT) = d.target_date
        GROUP BY d.target_date
        ORDER BY d.target_date
    </select>

    <select id = "monthStatus" parameterType="long" resultType= "com.example.funding.dto.response.creator.MonthCountDto">
        SELECT
            m.target_month AS createdAt,
            NVL(COUNT(p.projectId), 0) AS count
        FROM (
            SELECT
                ADD_MONTHS(TRUNC(SYSDATE, 'MM'), -LEVEL + 1) AS target_month
            FROM
                dual
            CONNECT BY LEVEL &lt; 12
        ) m
        LEFT JOIN project p
        ON TRUNC(p.createdAt, 'MM') = m.target_month
        GROUP BY m.target_month
        ORDER BY m.target_month
    </select>
</mapper>


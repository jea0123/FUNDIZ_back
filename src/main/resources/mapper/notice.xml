<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.funding.mapper.NoticeMapper">

    <select id="noticeList" resultType="notice">
        SELECT * FROM
        (SELECT sub.*, ROWNUM rnum FROM (
        SELECT * FROM notice order by NOTICEID desc
        ) sub)
    </select>

    <update id="updateViewCnt">
        UPDATE notice
        SET VIEWCNT = VIEWCNT + 1
        WHERE NOTICEID = #{noticeId}
    </update>

    <select id="noticeDetail" resultType="notice">
        SELECT * FROM notice
        WHERE NOTICEID = #{noticeId}
    </select>

    <select id="item" resultType="notice">
        SELECT * FROM notice
        WHERE NOTICEID=#{noticeId}
    </select>

    <insert id="addNotice">
        INSERT INTO notice
        VALUES (notice_seq.NEXTVAL, #{adId}, #{title}, #{content}, 0, SYSDATE)
    </insert>

    <update id="updateNotice">
        UPDATE notice
        SET TITLE=#{title}, CONTENT=#{content}
        WHERE NOTICEID=#{noticeId}
    </update>

    <delete id="deleteNotice">
        DELETE FROM notice
        WHERE NOTICEID=#{noticeId}
    </delete>

</mapper>
